{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "web-build"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/web-build/$1"
        }
    ],
    "env": {
        "OPENAI_API_KEY": "@openai_api_key"
    },
    "functions": {
        "server.js": {
            "maxDuration": 30
        }
    }
}